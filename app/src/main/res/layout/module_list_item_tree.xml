<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tree"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_tree_expanded"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/iv_tree_expand" />

    <ImageView
        android:id="@+id/iv_tree_select"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/iv_tree_expanded"
        android:scaleType="centerInside"
        android:src="@drawable/iv_tree_select"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_tree_book"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/iv_tree_select"
        android:gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@mipmap/module_tree_book" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_toRightOf="@id/iv_tree_book"
        android:singleLine="true"
        android:text="Test"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp" />

</LinearLayout>